{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "..",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^src/(.*)$": "<rootDir>/src/$1"
  },
  "collectCoverageFrom": [
    "src/**/*.(t|j)s",
    "!src/**/*.spec.ts",
    "!src/**/*.interface.ts",
    "!src/**/*.dto.ts",
    "!src/**/*.entity.ts"
  ],
  "coverageDirectory": "./coverage",
  "testTimeout": 30000,
  "setupFilesAfterEnv": ["<rootDir>/test/setup-e2e.ts"],
  "maxWorkers": 1,
  "forceExit": true,
  "detectOpenHandles": true
}
